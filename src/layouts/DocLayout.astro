---
import "../styles/global.css"
import Back from "../components/Back.astro"
import ClientRouter from "astro/components/ClientRouter.astro"
import { slide } from "astro:transitions"
const { frontmatter } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.svg" />
		<title>Astro.js wiki | {frontmatter.title}</title>
		<link rel="preload" href="/SpaceGrotesk.woff2" as="font" type="font/woff2" crossorigin />
		<script src="/script.js" is:inline></script>
		<ClientRouter />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<meta name="title" content={"Astro.js wiki " + frontmatter.title} />
		<meta name="description" content={frontmatter.description} />
		<meta name="keywords" content={frontmatter.description.split(" ")} />
		<meta name="og:title" content={"Astro.js wiki " + frontmatter.title} />
		<meta name="og:description" content={frontmatter.description} />
		<meta name="og:image" content="favicon.svg" />
		<meta name="theme-color" content="#FF1639" />
	</head>
	<body class="bg-[#121212] text-white">
		<main class="mt-[100px] w-full max-w-[100ch] m-auto text-[18px] p-[16px]">
			<Back />
			<span>
				{
					frontmatter.difficulty == "easy" ? (
						<easy>Principiante</easy>
					) : frontmatter.difficulty == "medium" ? (
						<medium>Medio</medium>
					) : (
						<hard>Dif√≠cil</hard>
					)
				}
			</span>
			<h2 class="font-bold text-[40px]">
				<span>{frontmatter.title}</span>
				<span>&rarr;</span>
			</h2>
			<slot />
		</main>
		<style is:inline>
			main p {
				margin-block: 15px;
				line-height: 1.45rem;
			}
			main h2,
			h1 {
				margin-top: 20px;
			}
			main h1 {
				font-size: 40px;
				font-weight: 800;
			}
			main h2 {
				font-size: 30px;
				font-weight: 800;
				font-family:
					SpaceGrotesk,
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					Oxygen,
					Ubuntu,
					Cantarell,
					"Open Sans",
					"Helvetica Neue",
					sans-serif;
			}
			main h3 {
				font-size: 24px;
				font-weight: 700;
				margin-top: 15px;
				margin-bottom: 10px;
			}
			main li {
				margin-block: 10px;
				padding-left: 16px;
				border-left: 2px solid orange;
				color: rgb(94, 167, 255);
			}
			main strong {
				font-family:
					SpaceGrotesk,
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					Oxygen,
					Ubuntu,
					Cantarell,
					"Open Sans",
					"Helvetica Neue",
					sans-serif;
				font-weight: 800;
				color: #a9bee3;
			}
			main pre {
				padding: 20px;
			}
			main blockquote {
				padding-left: 16px;
				border-left: 2px solid orange;
				color: rgb(159, 159, 159);
			}
		</style>
	</body>
</html>
