---
import ClientRouter from "astro/components/ClientRouter.astro"
import "../styles/global.css"
import { slide } from "astro:transitions"
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="./favicon.svg" />
		<title>Astro.js wiki</title>
		<link rel="preload" href="/SpaceGrotesk.woff2" as="font" type="font/woff2" crossorigin />
		<script src="/script.js" is:inline></script>
		<ClientRouter />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="title" content="Astro.js wiki | Resuelve tus dudas de Astro.js" />
		<meta
			name="description"
			content="Astro.js wiki es un sitio donde podrás resolver todas tus dudas sobre el framework de JavaScript Astro.js. Verás las preguntas mas frecuentes de Astro.js. Routing 🌐 Rendering 🦚 Islands 🏝️"
		/>
		<meta
			name="keywords"
			content="Astro, Astro.js, astro.js wiki, astrowiki, astro wiki, erixweb astro, framework javascript astro, preguntas astro.js, wiki, astro.js information, astro.js información, astrojswiki, astrowiki, routing, rendering, islands, markdown, astrowiki, astrojswiki, astrojs, astrojs wiki en español, astrojs islands wiki, server islands"
		/>
		<meta name="theme-color" content="#FF1639" />
		<meta name="og:title" content="Astro.js wiki" />
		<meta
			name="og:description"
			content="Astro.js wiki es un sitio donde podrás resolver todas tus dudas sobre el framework de JavaScript Astro.js. Verás las preguntas mas frecuentes de Astro.js. Routing 🌐 Rendering 🦚 Islands 🏝️"
		/>
		<meta name="og:site_name" content="astrowiki.vercel.app" />
		<meta name="og:image" content="favicon.svg" />
	</head>
	<body class="bg-[#0c111c]  text-white w-full text-[18px]">
		<slot />
	</body>
</html>
