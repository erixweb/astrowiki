---
export interface Props {
	level: string;
	title: string;
	body: string;
	href: string;
}

const { level, href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href} class="link">
		<div class="content">
			<span>
				{level == "easy" ? <easy>Principiante</easy> : level == "medium" ? <medium>Medio</medium> : <hard>Dif√≠cil</hard>}
			</span>
			<h2>
				{title}
				<span>&rarr;</span>
			</h2>
			<p>
				{body}
			</p>
		</div>
	</a>

</li>
<style>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	.link-card {
		max-width: 400px;
		width: 100%;
		list-style: none;
		display: flex;
		flex-direction: column;
		padding: 0.15rem;

		background-color: white;
		background-image: var(--accent-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;

		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link-card a.link {
		margin-top: 0px;
		height: 100%;
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
	.readmore {
		color: #09ef;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		width: 80%;
		margin-left: 0px;
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>

